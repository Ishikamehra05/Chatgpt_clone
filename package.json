{
  "name": "chat-gpt-clone",
  "version": "1.0.0",
  "description": "A full-featured ChatGPT clone built with MERN stack",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon server.js",
    "start": "node server.js",
    "client": "npm start --prefix ./clientapp",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "setup": "node setup.js",
    "build": "npm run build --prefix ./clientapp",
    "install-all": "npm install && npm install --prefix ./clientapp",
    "test-backend": "node test-backend.js",
    "test-chat": "node test-chat-session.js",
    "test-message": "node test-send-message.js",
    "test-all": "node test-complete-flow.js",
    "test-legacy": "node test-legacy-tools.js"
  },
  "author": "ishika",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "colors": "^1.4.0",
    "concurrently": "^9.2.0",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "openai": "^4.67.3",
    "uuid": "^11.0.3",
    "axios": "^1.10.0"
  }
}